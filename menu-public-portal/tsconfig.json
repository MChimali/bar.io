{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./src/",
    "paths": {
      "common": ["common"],
      "core": ["core"],
      "layouts": ["layouts"],
      "pods": ["pods"],
      "common-app": ["common-app"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "config/test/jest.js"],
  "exclude": ["node_modules"]
}
