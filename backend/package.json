{
  "name": "tools",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prestart": "sh ./create-dev-env.sh",
    "start": "run-p -l type-check:watch start:dev start:local-db",
    "start:dev": "nodemon --exec cross-env API_MOCK=false babel-node --extensions \".ts\" src/index.ts",
    "start:mock": "run-p -l type-check:watch start:api-mock",
    "start:api-mock": "nodemon --exec cross-env API_MOCK=true babel-node --extensions \".ts\" src/index.ts",
    "prestart:console-runners": "npm run prestart",
    "start:console-runners": "run-p type-check:watch console-runners start:local-db",
    "console-runners": "npm run type-check && nodemon --no-stdin --exec babel-node -r dotenv/config --extensions \".ts\" src/console-runners/index.ts",
    "start:local-db": "docker-compose -f ../docker-compose.yml up -d",
    "build": "run-p -l type-check build:prod",
    "build:prod": "npm run clean && cross-env NODE_ENV=production babel src -d dist --extensions \".ts\"",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "test": "jest -c ./config/test/jest.js --verbose",
    "test:watch": "npm run test -- --watchAll -i"
  },
  "author": "Lemoncode",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "mongodb": "^4.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.3",
    "@babel/core": "^7.17.4",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/inquirer": "^8.2.0",
    "@types/jest": "^27.4.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "cross-env": "^7.0.3",
    "inquirer": "^8.2.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "typescript-json-schema": "^0.53.0"
  }
}
