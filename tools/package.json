{
  "name": "tools",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prestart": "sh ./create-dev-env.sh",
    "start": "run-p type-check:watch console-runners start:local-db",
    "console-runners": "npm run type-check && nodemon --no-stdin --exec npx babel-node -r dotenv/config --extensions \".ts\" src/console-runners/index.ts",
    "start:local-db": "docker-compose up -d",
    "remove:local-db": "docker-compose down",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "test": "jest -c ./config/test/jest.js --verbose",
    "test:watch": "npm run test -- --watchAll -i"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.0",
    "mongodb": "^4.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.3",
    "@babel/core": "^7.17.4",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/inquirer": "^8.2.0",
    "@types/jest": "^27.4.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "inquirer": "^8.2.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  }
}
